public class Lab6Task14 {
    public static void main(String[] args) {
        double tuition = 10000;
        double targetTuition = 20000;
        int years = 0;
        while (tuition < targetTuition) {
            tuition += tuition * 0.07;
            years++;
        }
        System.out.println("Tuition will be " + years + " years");
    }
}
